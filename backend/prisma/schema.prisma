generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  login     String    @unique

  createAt  DateTime  @default(now())
  updateAT  DateTime  @default(now())

  email String @unique
  hash  String

  nickName String
  firstName String?
  lastName  String?





  pdp String
  friends String[]
  channels String[]
  achievements String[]
  games Game[]





  accessToken String? @unique

  // bookmarks Bookmark[]

  @@map("users")
}

model Channels {
  id        Int       @id @default(autoincrement())
  createAt  DateTime  @default(now())
  updateAT  DateTime  @default(now())

  channels String[]
}

model Game {
  id        Int       @id @default(autoincrement())
  createAt  DateTime  @default(now())
  updateAT  DateTime  @default(now())

  player_one String
  player_two String
  score String
  
  userId  String
  user User @relation(fields: [userId], references: [id])

  @@map("games")
}

